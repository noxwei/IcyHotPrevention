# IETY Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=iety
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=iety

# Voyage AI (Embeddings)
# Get your API key from https://www.voyageai.com/
VOYAGE_API_KEY=your_voyage_api_key_here
VOYAGE_MODEL=voyage-3.5-lite
VOYAGE_BATCH_SIZE=128

# SEC EDGAR
# Required: Set your User-Agent with contact email
SEC_USER_AGENT=IETY Research Bot (your-email@example.com)
SEC_RATE_LIMIT=10

# CourtListener
# Get your API key from https://www.courtlistener.com/
COURTLISTENER_API_KEY=your_courtlistener_api_key_here
COURTLISTENER_RATE_LIMIT=5000

# USASpending
# No API key required
USASPENDING_RATE_LIMIT=100

# GDELT
# No API key required for CSV downloads
# Set USE_BIGQUERY=true to query GDELT via BigQuery (requires GCP credentials)
GDELT_USE_BIGQUERY=false
GDELT_BIGQUERY_PROJECT=your_gcp_project_id

# Budget Controls
BUDGET_MONTHLY_LIMIT=50.00
BUDGET_WARNING_THRESHOLD=0.90
BUDGET_HALT_THRESHOLD=0.95
